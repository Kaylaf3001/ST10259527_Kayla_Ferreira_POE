<Window x:Class="WPF_POE_Kayla_Ferreira.Search"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Search" Height="342" Width="712">
    <Grid>
        <Grid HorizontalAlignment="Left" Height="326" VerticalAlignment="Center" Width="246">
            <TextBlock HorizontalAlignment="Center" Height="42" Margin="0,15,0,0" TextWrapping="Wrap" Text="Search for a specific ingredient or recipe" VerticalAlignment="Top" Width="226" TextAlignment="Center" FontSize="14" FontFamily="Century Gothic" Foreground="#FF170A78"/>
            <TextBox x:Name="SearchTextBox" HorizontalAlignment="Left" Margin="10,63,0,0" TextWrapping="Wrap" Text="Search" VerticalAlignment="Top" Width="190" TextChanged="TextBox_Search" FontFamily="Century Gothic" Foreground="#FF8992A9" BorderBrush="#FF3B529A" Background="White" SelectionBrush="#FF0078D7"/>

            <TextBlock HorizontalAlignment="Left" Height="19" Margin="10,91,0,0" TextWrapping="Wrap" Text="Food Groups" VerticalAlignment="Top" Width="190" FontFamily="Century Gothic" Foreground="#FF170A78"/>
            <CheckBox x:Name="FruitsCheckBox" Content="Fruits" HorizontalAlignment="Left" Margin="10,115,0,0" VerticalAlignment="Top" FontFamily="Century Gothic" Click="CheckBox_Click"/>
            <CheckBox x:Name="VegetablesCheckBox" Content="Vegetables" HorizontalAlignment="Left" Margin="10,135,0,0" VerticalAlignment="Top" FontFamily="Century Gothic" Click="CheckBox_Click"/>
            <CheckBox x:Name="GrainsCheckBox" Content="Grains" HorizontalAlignment="Left" Margin="10,155,0,0" VerticalAlignment="Top" FontFamily="Century Gothic" Click="CheckBox_Click"/>
            <CheckBox x:Name="ProteinCheckBox" Content="Protein" HorizontalAlignment="Left" Margin="105,115,0,0" VerticalAlignment="Top" FontFamily="Century Gothic" Click="CheckBox_Click"/>
            <CheckBox x:Name="DairyCheckBox" Content="Dairy" HorizontalAlignment="Left" Margin="105,135,0,0" VerticalAlignment="Top" FontFamily="Century Gothic" Click="CheckBox_Click"/>
            <CheckBox x:Name="FatsAndOilsCheckBox" Content="Fats and oils" HorizontalAlignment="Left" Margin="105,155,0,0" VerticalAlignment="Top" FontFamily="Century Gothic" Click="CheckBox_Click"/>
            <TextBlock HorizontalAlignment="Left" Height="21" Margin="10,196,0,0" TextWrapping="Wrap" Text="Calories" VerticalAlignment="Top" Width="119" FontFamily="Century Gothic" Foreground="#FF170A78"/>
            <Slider x:Name="CaloriesSlider" ValueChanged="Slider_Calories"/>
        </Grid>
        <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="326" VerticalAlignment="Center" Width="258"/>
        <ListBox x:Name="RecipeListBox" Margin="263,0,0,0" SelectionChanged="ListBox_SelectionChanged"/>
        <RichTextBox x:Name="RecipeDetailsTextBox" HorizontalAlignment="Left" Height="307" VerticalAlignment="Center" Width="412" Margin="282,0,0,0"/>
        <Button Content="Search" Click="Button_Click" Margin="10,290,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100"/>
    </Grid>
</Window>
