<Window x:Class="WPF_POE_Kayla_Ferreira.Window2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_POE_Kayla_Ferreira"
        mc:Ignorable="d"
        Title="View Recipe" Height="600" Width="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="111.4"/>
            <ColumnDefinition Width="88.6"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <ListBox x:Name="RecipeListBox" Grid.Row="1" SelectionChanged="RecipeListBox_SelectionChanged" Grid.ColumnSpan="2" Margin="0,61,0,0" Background="White" />
        <Grid Grid.Column="2" Grid.Row="1">
            <RichTextBox x:Name="RecipeDetailsTextBox" VerticalScrollBarVisibility="Auto" IsReadOnly="True" Margin="0,63,10,0" />
            <ListView x:Name="RecipeStepsListView" Visibility="Collapsed" Margin="0,0,0,10"/>
        </Grid>
        <Button Content="&lt;---" Grid.Row="1" Click="BackButton_Click" Margin="1,543,67,0" Background="#FF72B7E0" FontWeight="Bold"/>
        <Button Content="Done" Grid.Row="1" HorizontalAlignment="Left" Click="DoneButton_Click" Margin="533,543,0,0" Background="#FF72B7E0" Width="47" Grid.Column="2"/>
        <TextBlock Grid.ColumnSpan="2" HorizontalAlignment="Center" Height="50" Grid.RowSpan="2" TextWrapping="Wrap" Text="Recipes" VerticalAlignment="Top" Width="199" FontSize="48" TextAlignment="Center" FontFamily="Felix Titling" Foreground="#FF1E2A76" Background="White"/>
        <Border BorderBrush="Black" BorderThickness="1" Grid.ColumnSpan="2" HorizontalAlignment="Center" Height="56" Grid.RowSpan="2" VerticalAlignment="Top" Width="199"/>
        <Border BorderBrush="Black" BorderThickness="1" Grid.ColumnSpan="2" HorizontalAlignment="Center" Height="503" Margin="0,61,0,0" Grid.RowSpan="2" VerticalAlignment="Top" Width="201"/>
    </Grid>
</Window>