<Window x:Class="WPF_POE_Kayla_Ferreira.Window2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_POE_Kayla_Ferreira"
        mc:Ignorable="d"
        Title="View Recipe" Height="599" Width="810"
        ResizeMode="NoResize">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
            <RowDefinition Height="Auto" MinHeight="56.96"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="0"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <ListBox x:Name="RecipeListBox" Grid.Row="1" SelectionChanged="RecipeListBox_SelectionChanged" Margin="0,61,0,0" Background="White" />
        <Grid Grid.Column="2" Grid.Row="1" Margin="2,204,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <RichTextBox x:Name="RecipeDetailsTextBox" VerticalScrollBarVisibility="Auto" IsReadOnly="True" Height="140" VerticalAlignment="Top" TextChanged="RecipeDetailsTextBox_TextChanged" Margin="0,-144,-1,0" />
            <ListView x:Name="RecipeStepsListView" Visibility="Collapsed" Margin="0,0,0,10"/>
        </Grid>
        <Button Content="Back" Grid.Row="2" Click="BackButton_Click" Margin="0,29,157,2" Background="#FF72B7E0" RenderTransformOrigin="-1.102,0.704" HorizontalAlignment="Right" Width="43"/>
        <Button Content="Done" Grid.Row="2" HorizontalAlignment="Left" Click="DoneButton_Click" Margin="523,29,0,0" Background="#FF72B7E0" Width="47" Grid.Column="2" RenderTransformOrigin="-0.017,0.753" Height="26" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Center" Height="50" Grid.RowSpan="2" TextWrapping="Wrap" Text="Recipes" VerticalAlignment="Top" Width="200" FontSize="48" TextAlignment="Center" FontFamily="Felix Titling" Foreground="#FF1E2A76" Background="White"/>
        <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Center" Height="56" Grid.RowSpan="2" VerticalAlignment="Top" Width="200"/>
        <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Center" Height="445" Margin="0,61,0,0" Grid.RowSpan="2" VerticalAlignment="Top" Width="200"/>
    </Grid>
</Window>